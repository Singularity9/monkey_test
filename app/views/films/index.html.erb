<h1>Listing films</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Film summary</th>
      <th>Film year</th>
      <th>Is released netflix</th>
      <th>Is released amazon stream</th>
      <th>Is released disc</th>
      <th>Netlifx link</th>
      <th>Amazon stream link</th>
      <th>Disc link</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @films.each do |film| %>
      <tr>
        <td><%= film.title %></td>
        <td><%= film.film_summary %></td>
        <td><%= film.film_year %></td>
        <td><%= film.is_released_netflix %></td>
        <td><%= film.is_released_amazon_stream %></td>
        <td><%= film.is_released_disc %></td>
        <td><%= film.netlifx_link %></td>
        <td><%= film.amazon_stream_link %></td>
        <td><%= film.disc_link %></td>
        <td><%= film.user %></td>
        <td><%= link_to 'Show', film %></td>
        <td><%= link_to 'Edit', edit_film_path(film) %></td>
        <td><%= link_to 'Destroy', film, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

