<%- model_class = Film -%>
<div class="page-header">
  <h1><%=t '.title', :default => Film %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:title) %></dt>
      <dd><pre class="prettyprint"><%= @film.title %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:film_summary) %></dt>
      <dd><pre class="prettyprint"><%= @film.film_summary %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:film_year) %></dt>
      <dd><pre class="prettyprint"><%= @film.film_year %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:is_released_netflix) %></dt>
      <dd><pre class="prettyprint"><%= @film.is_released_netflix %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:is_released_amazon_stream) %></dt>
      <dd><pre class="prettyprint"><%= @film.is_released_amazon_stream %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:is_released_disc) %></dt>
      <dd><pre class="prettyprint"><%= @film.is_released_disc %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:netlifx_link) %></dt>
      <dd><pre class="prettyprint"><%= @film.netlifx_link %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:amazon_stream_link) %></dt>
      <dd><pre class="prettyprint"><%= @film.amazon_stream_link %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:disc_link) %></dt>
      <dd><pre class="prettyprint"><%= @film.disc_link %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              films_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_film_path(@film), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              film_path(@film),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

